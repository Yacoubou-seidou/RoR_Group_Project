<div class="container">
  <h1>Food List</h1>
  <% if @foods.any? %>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Measuremen Unit</th>
          <th scope="col">Price</th>
          <th scope="col">Quantity</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
       <% @foods.each do |food| %>
           <tr>
              <td><%= link_to food.name.capitalize, food_path(food), class:'text-white'%></td>
              <td><%= food.measurement_unit %></td>
              <td><%= number_to_currency(food.price) %></td>
              <td><%= food.quantity %></td>
              <td>
                <%= button_to  'Delete', food_path(food), method: :delete, data: { confirm: 'Are you sure you want to delete this food item?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
       <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No food items added yet.</p>
   <% end %>
   <div class='text-center'>
      <%= link_to  'Add New Food', new_food_path, class: 'btn btn-info' %>
   </div>
</div>
