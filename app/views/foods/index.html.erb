<div class="container">
 <h1>Food List</h1>
<% if @foods.any? %>
  <ul>
    <% @foods.each do |food| %>
      <li>
        <%= link_to food.name, food_path(food) %>
        (<%= food.measurement_unit %>, <%= number_to_currency(food.price) %>, Quantity: <%= food.quantity %>)
        <%= link_to 'Edit', edit_food_path(food) %>
        <%= link_to 'Delete', food_path(food), method: :delete, data: { confirm: 'Are you sure you want to delete this food item?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No food items added yet.</p>
<% end %>
<%= link_to 'Add New Food', new_food_path %>
</div>
