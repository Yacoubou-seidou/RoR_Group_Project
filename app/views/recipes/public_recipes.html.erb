<p style="color: green"><%= notice %></p>

<h1 class="text-center">Public Recipes</h1>

<div id="recipes" class="d-flex flex-column align-items-center gap-3">
  <% if @recipes.count > 0 %>
    <% @recipes.each do |recipe| %>
      <%= render 'public_recipe', recipe: %>
    <% end %>
  <% else %>
    <h3>No public recipes posted</h3>
  <% end %>
</div>
